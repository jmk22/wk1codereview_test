<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>My Contact List</title>
</head>
<body>
  <h2>My Contacts</h2>
  @if (@Model.Count == 0) {
    <h3>No contacts have been added yet.</h3>
  }
  @foreach (var contact in Model) {
    <li>@contact.GetName()</li>
    <li>@contact.GetPhoneNumber()</li>
    <li>@contact.GetAddress()</li>
  }
  <p><a href="/">Back home</a></p>

  <h4><a href="/contacts/new">Add a contact</a></h4>
</body>
</html>
