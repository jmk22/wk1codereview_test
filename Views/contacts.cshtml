<body>
  <h1>Contacts</h1>
  <hr>
  @if (@Model.Count == 0) {
    <h3>No contacts have been added yet.</h3>
  }
  @foreach (var contact in Model) {
    <ul>
      <li><h3>@contact.GetName()</h3></li>
      <li><h3>@contact.GetPhoneNumber()</h3></li>
      <li><h3>@contact.GetAddress()</h3></li>
      <hr>
    </ul>
  }
  <p><a href="/">Back home</a></p>
  <h4><a href="/contacts/new">Add a contact</a></h4>
  <br>
  <h3><a href="/contacts_cleared">Delete all contacts</a></h3>
</body>
