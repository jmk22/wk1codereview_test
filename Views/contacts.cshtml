<body>
  <h1>Contacts</h1>
  <hr>
  @if (@Model.Count == 0) {
    <h3>No contacts have been added yet.</h3>
  }
  @foreach (var contact in Model) {
    <ul>
      <hr>
      <h3>@contact.GetName()</h3>
      <li>@contact.GetPhoneNumber()</li>
      <li>@contact.GetAddress()</li>
      <hr>
    </ul>
  }
  <hr>
  <p><a href="/">Back home</a></p>
  <h4><a href="/contacts/new">Add a contact</a></h4>
  <br>
  <form action="/contacts_cleared" method="post">
  <button type="submit">Delete all contacts</button>
  </form>
</body>
